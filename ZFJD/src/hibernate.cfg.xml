		<mapping class="com.ushine.core.po.Resource" />
		<mapping class="com.ushine.core.po.Operation" />
		<mapping class="com.ushine.core.po.City" />
		<mapping class="com.ushine.core.po.Permit" /> 
		
		<!-- 基础信息库 -->
		<mapping class="com.ushine.ssh.model.VocationalWork" />
		<mapping class="com.ushine.ssh.model.VocationalWorkSystemVersion" />
		<mapping class="com.ushine.ssh.model.DataGetTask" />
		<mapping class="com.ushine.ssh.model.TempLog" />
		<mapping class="com.ushine.ssh.model.BlackBoxStatusInfo" />
		<mapping class="com.ushine.ssh.model.ThisNodeInfo" />
		<mapping class="com.ushine.ssh.model.SubordinateNodeInfo" />
	</session-factory>
</hibernate-configuration>